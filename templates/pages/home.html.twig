{% extends 'base.html.twig' %}

{% block title 'Mon Agence' %}

{% block body %}
	<div class="jumbotron text-center">
		<h1>Agence Immo</h1>
	</div>
	<div class="container">
		<h2>Les derniers biens<h2>
				<div class="row flex">
					{% for property in properties %}
						<div class="col-3">
							<div class="card">
								<div class="card-body">
									<h5 class="card-title">
										<a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
									</h5>
									<p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
									<div class="text-primary" style="font-weight: bold;font-size: 2rem;">{{ property.formatedPrice }} euros</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
	</div>
{% endblock %}
